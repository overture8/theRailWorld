<% content_for :title, 'theRailWorld.com by Phil McClure - Ruby on Rails blog in Belfast' %>

<% @posts.each do |post| %>
  <h2><%= link_to post.title, post %></h2>
  <div class="author"><em>by <%=h post.author %></em></div>
  <%= BlueCloth.new(post.body).to_html %><br /><br />
  <%= "Posted on #{post.created_at.strftime("%a %b %Y")}" %> | <%= link_to "Comments", post_path(post, :anchor => "comments"), :class => 'comment_link' %>
  <hr />
<% end %>
<%= will_paginate @posts %>

<% content_for :sidebar do %>
  <%= link_to(image_tag('banner1.png'), 'http://meetee.me' ) %>
<% end %>

